<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.playtimemanager">

    <!-- '앱 사용 기록' 접근을 위한 특별 권한입니다. -->
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <!--
         !!! 여기가 바로 핵심 변경점입니다! !!!
         '투명 벽'을 통과하고 다른 모든 앱의 정보를 조회할 수 있도록
         시스템에 공식적으로 허가를 요청하는 '특별 허가증'입니다.
    -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
        </intent>
    </queries>

    <!-- 포그라운드 서비스(기본) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- dataSync 타입용 권한 (API 34+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <!-- 알림 권한 (API 33+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlayTimeManager">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.PlayTimeManager">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ 여기에 추가 -->
        <service
            android:name=".timer.TimerService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
    </application>

</manifest>